{
    "root": true,
    "env": {
        "browser": true,
        "es6": true,
        "node": true
    },
    "extends": [
        "plugin:vue/strongly-recommended",
        "plugin:prettier/recommended",
        "eslint:recommended"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module",
        "parser": "babel-eslint"
    },
    "plugins": ["vue", "eslint-plugin-vue", "eslint-plugin-prettier"],
    "rules": {
        "vue/html-indent": ["warn", 4],
        "vue/max-attributes-per-line": "off",
        "vue/html-self-closing": "off",
        "no-debugger": "off",
        "vue/singleline-html-element-content-newline": "off"
    }
}
